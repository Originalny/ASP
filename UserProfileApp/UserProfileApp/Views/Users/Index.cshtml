@model IEnumerable<UserProfileApp.Models.User>
@{
    ViewData["Title"] = "Список пользователей";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Список пользователей</h3>
    <a asp-action="Create" class="btn btn-primary">Добавить пользователя</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">Пока нет пользователей.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Имя</th>
                    <th>Email</th>
                    <th>Профиль</th>
                    <th class="text-end">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    <tr>
                        <td>@u.Username</td>
                        <td>@u.Email</td>
                        <td>
                            @if (u.Profile != null)
                            {
                                <span class="badge text-bg-success">Есть</span>
                            }
                            else
                            {
                                <span class="badge text-bg-secondary">Нет</span>
                            }
                        </td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@u.Id" class="btn btn-sm btn-outline-secondary">Подробнее</a>
                            <a asp-action="Edit" asp-route-id="@u.Id" class="btn btn-sm btn-warning">Изменить</a>
                            <a asp-action="Delete" asp-route-id="@u.Id" class="btn btn-sm btn-danger">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
