@model IEnumerable<Author>
@{
    ViewData["Title"] = "Авторы";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Список авторов</h3>
    <a asp-action="Create" class="btn btn-primary">Добавить автора</a>
</div>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Книг</th>
            <th class="text-end">Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.Name</td>
                <td>@a.Books.Count</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@a.Id" class="btn btn-sm btn-outline-secondary">Подробнее</a>
                    <a asp-action="Edit" asp-route-id="@a.Id" class="btn btn-sm btn-warning">Изменить</a>
                    <a asp-action="Delete" asp-route-id="@a.Id" class="btn btn-sm btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
