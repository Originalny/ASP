@model IEnumerable<Book>
@{
    ViewData["Title"] = "Книги";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Список книг</h3>
    <a asp-action="Create" class="btn btn-primary">Добавить книгу</a>
</div>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Название</th>
            <th>Автор</th>
            <th>Год</th>
            <th class="text-end">Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.Title</td>
                <td>
                    <a asp-controller="Authors" asp-action="Details" asp-route-id="@b.AuthorId">
                        @b.Author?.Name
                    </a>
                </td>
                <td>@b.Year</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@b.Id" class="btn btn-sm btn-outline-secondary">Подробнее</a>
                    <a asp-action="Edit" asp-route-id="@b.Id" class="btn btn-sm btn-warning">Изменить</a>
                    <a asp-action="Delete" asp-route-id="@b.Id" class="btn btn-sm btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
