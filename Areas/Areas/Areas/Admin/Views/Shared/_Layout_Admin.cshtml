@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "Админ-панель";
}
<!doctype html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>@title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a>
            <div class="navbar-nav">
                <a class="nav-link" asp-area="Admin" asp-controller="Users" asp-action="Index">Пользователи</a>
                <a class="nav-link" asp-area="Admin" asp-controller="Settings" asp-action="Index">Настройки</a>
                <a class="nav-link" asp-area="Admin" asp-controller="Reports" asp-action="Index">Отчёты</a>

            </div>
            <div class="ms-auto">
                <a class="btn btn-sm btn-light" asp-controller="Home" asp-action="Index">На сайт</a>
            </div>
        </div>
    </nav>
    <div class="container my-4">
        @RenderBody()
    </div>
</body>
</html>
