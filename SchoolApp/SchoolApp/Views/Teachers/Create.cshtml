@model SchoolApp.Models.Teacher
@{
    ViewData["Title"] = "Новый преподаватель";
    Layout = "_Layout";
}
<h2>Новый преподаватель</h2>

<form asp-action="Create" method="post" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Имя</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-success">Сохранить</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
    </div>
</form>

@section Scripts {
     <partial name="_ValidationScriptsPartial" />
}
