@model IEnumerable<SchoolApp.Models.Teacher>
@{
    ViewData["Title"] = "Преподаватели";
    Layout = "_Layout";
}
<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="mb-0">Преподаватели</h2>
    <a asp-action="Create" class="btn btn-success">+ Добавить преподавателя</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">Пока нет преподавателей. Добавьте первого.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover align-middle bg-white">
            <thead class="table-light">
                <tr>
                    <th>Имя</th>
                    <th>Курсов ведёт</th>
                    <th class="text-end">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model)
                {
                    <tr>
                        <td class="fw-medium">@t.Name</td>
                        <td><span class="badge bg-secondary">@((t.Courses?.Count) ?? 0)</span></td>
                        <td class="text-end">
                            <div class="btn-group">
                                <a asp-action="Details" asp-route-id="@t.Id" class="btn btn-sm btn-outline-secondary">Подробнее</a>
                                <a asp-action="Edit" asp-route-id="@t.Id" class="btn btn-sm btn-warning">Изменить</a>
                                <a asp-action="Delete" asp-route-id="@t.Id" class="btn btn-sm btn-danger">Удалить</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
